pkgname=php-extensions-intl
pkgver=8.3.10
pkgrel=0
pkgdesc="Intl PHP extension"

url="https://github.com/cjschiphol/php-extensions"
arch="aarch64"
license="GPL"
depends_dev=""
depends="icu icu-data-full"
install="$pkgname.post-install $pkgname.post-deinstall"
source="https://github.com/cjschiphol/php-extensions/releases/download/intl-8.3.10/intl-8.3.10-extension-aarch64-alpine.tar.gz"
options="!check"

package() {
    mkdir -p "$pkgdir/lib/php-extensions"
    cp -r "$srcdir"/extension/*.so "$pkgdir/lib/php-extensions"
}

build() {
    return
}
